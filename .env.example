# LLM PROVIDER KEYS (At least one is required depending on your LLM_NAME)
MISTRAL_API_KEY=your_mistral_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_ai_api_key_here

# LLM MODEL CONFIGURATION
# Format: provider:model-name (e.g., openai:gpt-4o, mistral:mistral-small-latest)
LLM_NAME=mistral:mistral-small-latest

# DATABASE CONFIGURATION
# Format: driver://user:password@host:port/dbname

# --- SQLite Examples ---
# Local SQLite (Relative path)
# DATABASE_URL=sqlite:///./jobfit.db

# Local SQLite (Absolute path - Recommended for local dev)
DATABASE_URL=sqlite:////Users/username/project/jobfit.db

# SQLite "Network" (Shared drive or mounted volume)
# DATABASE_URL=sqlite:////mnt/volumes/data/jobfit.db


# --- PostgreSQL Examples ---
# Local PostgreSQL
# DATABASE_URL=postgresql://postgres:password@localhost:5432/jobfit

# Network/Remote PostgreSQL (Cloud DB like Render, Supabase, RDS)
# DATABASE_URL=postgresql://db_user:db_password@db.hosting.com:5432/jobfit_db


# APPLICATION SETTINGS
DEBUG=True
DEBUG_PAYLOAD_LOGGING=True
